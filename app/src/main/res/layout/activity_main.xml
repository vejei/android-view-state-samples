<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button_view_state_sample"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/view_state_sample_button_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/button_compound_view_state_sample"
        app:layout_constraintVertical_chainStyle="packed"
        android:onClick="startSampleActivity"/>

    <Button
        android:id="@+id/button_compound_view_state_sample"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/compound_view_state_sample_button_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_view_state_sample"
        app:layout_constraintBottom_toBottomOf="parent"
        android:onClick="startSampleActivity"/>

</androidx.constraintlayout.widget.ConstraintLayout>